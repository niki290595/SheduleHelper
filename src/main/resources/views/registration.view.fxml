<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<AnchorPane
        prefHeight="200.0"
        prefWidth="400.0"
        xmlns="http://javafx.com/javafx/8"
        xmlns:fx="http://javafx.com/fxml/1"
        stylesheets="@../Styles.css"
        fx:controller="controllers.RegistrationViewController">
    <children>

        <GridPane
                AnchorPane.leftAnchor="0.0"
                AnchorPane.rightAnchor="0.0"
                AnchorPane.topAnchor="0.0"
                AnchorPane.bottomAnchor="0.0">

            <columnConstraints>
                <ColumnConstraints prefWidth="100.0" />
            </columnConstraints>

            <rowConstraints>
                <RowConstraints prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>

            <children>

                <TextField
                        fx:id="loginTEdit"
                        maxWidth="250"
                        promptText="Логин"
                        GridPane.halignment="CENTER"
                        GridPane.hgrow="SOMETIMES"
                        GridPane.valignment="CENTER"
                        GridPane.vgrow="SOMETIMES">
                    <GridPane.margin> <Insets left="30.0" /> </GridPane.margin>
                </TextField>

                <PasswordField
                        fx:id="passTEdit"
                        maxWidth="250"
                        promptText="Пароль"
                        GridPane.halignment="CENTER"
                        GridPane.rowIndex="1"
                        GridPane.valignment="CENTER">
                    <GridPane.margin> <Insets left="30.0" /> </GridPane.margin>
                </PasswordField>

                <PasswordField
                        fx:id="repeatPassTEdit"
                        maxWidth="250"
                        promptText="Пароль"
                        GridPane.halignment="CENTER"
                        GridPane.rowIndex="2"
                        GridPane.valignment="CENTER">
                    <GridPane.margin> <Insets left="30.0" /> </GridPane.margin>
                </PasswordField>

                <Circle
                        fx:id="repeatPassCircle"
                        fill="#ff0000"
                        layoutX="10.0"
                        radius="5.0"
                        stroke="#000000"
                        strokeType="INSIDE"
                        GridPane.rowIndex="2">
                    <GridPane.margin> <Insets left="5.0" /> </GridPane.margin>
                </Circle>

                <Circle
                        fx:id="loginCircle"
                        fill="#ff0000"
                        radius="5.0"
                        stroke="#000000"
                        strokeType="INSIDE">
                    <GridPane.margin> <Insets left="5.0" /> </GridPane.margin></Circle>

                <GridPane GridPane.rowIndex="3">

                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>

                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>

                    <children>

                        <Button
                                defaultButton="true"
                                maxWidth="100.0"
                                mnemonicParsing="false"
                                onAction="#save"
                                prefWidth="100.0"
                                text="Сохранить"
                                GridPane.halignment="CENTER"
                                GridPane.valignment="CENTER" />
                        <Button
                                cancelButton="true"
                                maxWidth="100.0"
                                mnemonicParsing="false"
                                onAction="#cancel"
                                prefWidth="100.0"
                                text="Отмена"
                                GridPane.columnIndex="1"
                                GridPane.halignment="CENTER"
                                GridPane.valignment="CENTER" />
                    </children>
                </GridPane>

                <Label text="Логин">
                    <GridPane.margin>
                        <Insets left="20.0" />
                    </GridPane.margin>
                </Label>

                <Label text="Пароль" GridPane.rowIndex="1">
                    <GridPane.margin>
                        <Insets left="20.0" />
                    </GridPane.margin>
                </Label>
            </children>
        </GridPane>
    </children>
</AnchorPane>
